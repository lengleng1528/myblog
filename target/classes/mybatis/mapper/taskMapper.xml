<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hogwarts.blog.mapper.TaskMapper">

    <resultMap id="task" type="com.hogwarts.blog.pojo.Task">
        <id property="id" column="id"/>
        <result property="user" column="user"/>
        <result property="status" column="status"/>
        <result property="type" column="type"/>
        <result property="condition" column="condition"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!--查询全部任务-->
    <select id="findAll" resultMap="task">
        SELECT user,status,created_at FROM tb_task
        ORDER BY updated_at DESC
    </select>

    <select id="findTaskByVo" resultMap="task" parameterType="com.hogwarts.blog.vo.TaskSearch">
        SELECT user,status,created_at FROM tb_task
        where status = #{status}
        ORDER BY updated_at DESC
    </select>


</mapper>